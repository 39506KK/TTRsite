<div class='container px-5 px-sm-0'>
  <h2 class="mt-4">
    <span>予約一覧</span>
  </h2>
  <div class='row'>
    <div class='col-md-8 mt-4'>
      <table class="table text-center">
        <thead>
          <tr>
            <th>予約日</th>
            <th>予約時間</th>
            <th>予約者</th>
            <th>電話番号</th>
          </tr>
        </thead>
        <tbody>
          <% @reserves.each do |f| %>
          <tr>
            <td><%= f.day %></td>
            <td><%= f.time %></td>
            <td><%= f.customer.full_name %></td>
            <td><%= f.customer.tell%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination justify-content-center">
        <%= paginate @reserves, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>