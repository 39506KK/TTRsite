<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-7 offset-lg-3">
    <h2>アクセス</h2>
  
      <h4 class="mt-4">場所</h4>
      <p>〒〇〇〇-〇〇〇〇</br>
         〇〇県〇〇市〇〇123-1</br>
         TEL.000-00-0000</p>
  
      <h4 class="mt-4 mb-3">周辺地図</h4>
      <div id='map' style="width: 100%; height: 350px;"></div>
        <script>
          let map;
          let mainMarker;
          function initMap(){
            map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: 36.64332, lng: 138.18864},
              zoom: 15
            });
            // 初期位置にマーカーを立てる
            mainMarker = new google.maps.Marker({
              map: map,
              position: {lat: 36.64332, lng: 138.18864},
            });
          }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
    </div>
  </div>
</div>
