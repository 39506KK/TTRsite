  <h3>周辺地図</h3>
  <div id='map' style="width: 500px; height: 350px;"></div>

    <script>
      let map;
      let mainMarker;
      function initMap(){
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 36.64332, lng: 138.18864},
          zoom: 15
        });
        // 初期位置にマーカーを立てる
        mainMarker = new google.maps.Marker({
          map: map,
