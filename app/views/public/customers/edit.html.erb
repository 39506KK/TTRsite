<div class="container mt-4">
  <div class="row">
    <div class="col-md-12 col-lg-7 offset-lg-2">
      <h2>会員情報編集</h2>
        <%= form_with model: @customer, url: public_customer_path do |f| %>
          <div class="row mt-5 mb-4">
            <div class="col-md-6">
              <%= f.label :last_name, '姓' %>
              <%= f.text_field :last_name, class: 'form-control', autocomplete: "last_name" %>
            </div>
            <div class="col-md-6">
              <%= f.label :first_name, '名' %>
              <%= f.text_field :first_name,  class: 'form-control', autocomplete: "first_name" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-md-6">
              <%= f.label :last_kana, 'セイ' %>
              <%= f.text_field :last_kana, class: 'form-control', autocomplete: "last_kana" %>
            </div>
            <div class="col-md-6">
              <%= f.label :first_kana, 'カナ' %>
              <%= f.text_field :first_kana,  class: 'form-control', autocomplete: "first_kana" %>
            </div>
          </div>
          <div class="form-group mb-4">
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :tell, '電話番号' %>
            <%= f.text_field :tell, class: 'form-control', autocomplete: "tell" %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :password, 'パスワード' %>
            <small class="text-muted m-2">6文字以上の半角英数字</small>
            <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :password, 'パスワード（確認用）' %>
            <small class="text-muted m-2">6文字以上の半角英数字</small>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          </div>
          <div class="float-left mb-5">
            <%= f.submit "変更内容を保存", class: 'btn btn-success btn-md' %>
            <%= link_to "退会する", public_customers_quit_path, class: 'btn btn-danger ml-5' %>
          </div>
        <% end %>
    </div>
  </div>
</div>
  